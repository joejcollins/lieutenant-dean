    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask API",
            "type": "python",
            "python": "${workspaceFolder}/flask_api_v1/.venv/bin/python",
            "cwd": "${workspaceFolder}/flask_api_v1",
            "request": "launch",
            "module": "gunicorn",
            "args": [
                "main:APP",
                "--config",
                "gunicorn_conf.py",
                "--error-logfile",
                "-",
                "--workers",
                "1",
                "--timeout",
                "3600"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Celery Broker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--workdir=celery_redis",
                "--app=main",
                "worker",
                "--hostname=worker1@%n",
                "--loglevel=INFO",
                "--queues=ansible_queue",
                "--pool=solo"
            ],
            "justMyCode": false,
        },
        {
            "name": "Celery Flower",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "celery",
            "args": [
                "--workdir=celery_redis",
                "--app=main",
                "flower",
                "--conf=flower_config.py"
            ],
            "env": {
                "CELERY_CONFIG": "flower"
            },
            "justMyCode": false,
        }
    ]
}