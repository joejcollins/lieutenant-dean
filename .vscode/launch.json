    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Flask API - Debug",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "python": "${workspaceFolder}/flask_api_v1/.venv/bin/python",
            "args": [],
            "cwd": "${workspaceFolder}/flask_api_v1",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "jinja": true
        },
        {
            "name": "Python: Celery Broker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--workdir=task_queuing",
                "--app=celery_app",
                "worker",
                "--hostname=worker1@%n",
                "--loglevel=INFO",
                "--queues=ansible_queue",
                "--pool=solo"
            ],
            "justMyCode": false,
        }
    ]
}