    "version": "0.2.0",
    "justMyCode": false,
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 8080
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "./task_queue"
                }
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Celery Rabbit Broker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--workdir=celery_apps",
                "--app=rabbit_broker",
                "worker",
                "--hostname=worker1@%n",
                "--loglevel=INFO",
                "--queues=text_queue",
                "--pool=solo"
            ]
        }
    ]
}